{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "nodenext",
    "target": "ES2021",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,

    "esModuleInterop": true,
    "moduleResolution": "nodenext",

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
