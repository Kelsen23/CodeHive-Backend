generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  MOD
  USER
}

enum Status {
  ACTIVE
  TERMINATED
}

